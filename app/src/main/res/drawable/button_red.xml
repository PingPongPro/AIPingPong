<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击背景-->  
    <item android:state_pressed="true">  
        <shape>  
             <!--色值-->  
            <solid android:color="#ff0033" />
            <!--圆角-->
            <corners android:topLeftRadius="15dp" />
        </shape>  
    </item>
    <!--默认背景-->  
    <item>  
        <shape>  
            <solid android:color="#ff0033" />
            <corners android:topLeftRadius="15dp" />
        </shape>  
    </item>
</selector>